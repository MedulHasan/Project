<%- include('../../../partials/head.ejs') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-10 my-5">
            <div class="card vard-body">
                <h5 class="mt-3 ml-3">List of My Posts</h5>
                <div class="row">
                    <% if(posts.length === 0) { %>
                        <div class="text-center text-muted">
                            <p>There is no posts available right now</p>
                            <a href="/posts/creat" class="btn btn-primary btn-sm">Creat New Post</a>
                        </div>
                    <% } else { %>
                        <% for(let post of posts.reverse()) { %>
                            <div class="card card-sm-3 m-4">
                                <% if(post.thumbnail) { %>
                                    <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="card-img-top mt-3">
                                <% } %>
                                <div class="card-body">
                                    <a href="/posts/edit/<%= post._id %>" style="color: #222;"><h5><%= post.title %></h5>
                                    </a>
                                </div>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../../partials/footer.ejs') %>

</body>
</html>